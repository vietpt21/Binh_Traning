@model IEnumerable<Product>


<div class="row pb-3">
	@foreach(var product in Model)
	{
		<div class="col-lg-3 col-md-6">
			<div class="row p-2">
				<div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
				    <div class="border-0 p-3 shadow border-top border-5 rounded">
						<img src="@product.ImageUrl" class="card-img-top rounded"/>
					    <div class="card-body pb-0">
						    <div class="card-title h5 text-dark text-uppercase text-center">@product.Title</div>
					    	<div class="card-title text-warning text-center">@product.Author</div>
						</div>
						<div class=" pl-1">
							<p class="text-dark opacity-75 text-center  mb-0">
								List price:
								<span class=" text-decoration-line-through">
									@product.ListPrice.ToString("c")
								</span>
							</p>
						</div>
						<div class=" pl-1">
							<p class="text-dark opacity-75 text-center">
								As low as:
								<span>
									@product.Price100.ToString("c")
								</span>
							</p>
						</div>
					</div>
					
					<div>
						<a asp-action="Details" asp-route-productId ="@product.Id" class="btn btn-primary form-control">
							Details
						</a>
					</div>
				</div> 
			</div>
		</div>
	}
</div>